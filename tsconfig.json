{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@mandu/core": ["./packages/core/src/index.ts"],
      "@mandu/core/*": ["./packages/core/src/*"],
      "@mandu/cli": ["./packages/cli/src/index.ts"],
      "@mandu/cli/*": ["./packages/cli/src/*"]
    },
    "jsx": "react-jsx",
    "types": ["bun-types"]
  },
  "include": [
    "packages/**/*.ts",
    "packages/**/*.tsx",
    "apps/**/*.ts",
    "apps/**/*.tsx",
    "tests/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
