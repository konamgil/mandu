{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@mandujs/core": ["../../packages/core/src"],
      "@mandujs/core/*": ["../../packages/core/src/*"]
    }
  },
  "include": ["src", "app", "apps"]
}
