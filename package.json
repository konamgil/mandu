{
  "name": "mandujs",
  "version": "0.10.0",
  "private": true,
  "license": "MPL-2.0",
  "author": "Liam Ko",
  "type": "module",
  "packageManager": "bun@1.2.0",
  "engines": {
    "bun": ">=1.0.0"
  },
  "workspaces": [
    "packages/*",
    "demo/*"
  ],
  "scripts": {
    "test": "bun test",
    "mandu": "bun run packages/cli/src/main.ts",
    "changeset": "changeset",
    "version": "changeset version && bun install",
    "publish": "bun run scripts/publish.ts",
    "publish:dry": "bun run scripts/publish.ts --dry-run",
    "publish:force": "bun run scripts/publish.ts --skip-check",
    "release": "bun run version && bun run publish",
    "check:publish": "bun run scripts/pre-publish-check.ts"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@types/bun": "latest",
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "bun-types": "^1.3.7",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "zod": "^3.22.0"
  }
}
